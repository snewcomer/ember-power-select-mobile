<h1>SCOTT</h1>

<!-- single / nav component provided -->
{{#power-select-mobile 
  renderInPlace=true 
  navMobileComponent="nav-mobile" 
  options=numbers 
  mustFallback="mobile"
  selected=number 
  className="t-single"
  mobileTagName="div"
  onchange=(action (mut number)) as |num|}}
  {{num}}
{{/power-select-mobile}}

<!-- multiple / no nav component provided -->
{{#power-select-mobile 
  multiple=true 
  renderInPlace=true 
  options=numbers 
  mustFallback="mobile" 
  selected=numbero
  className="t-multi"
  mobileTagName="div"
  onchange=(action (mut numbero)) as |num|}}
  {{num}}
{{/power-select-mobile}}

<!-- single / nav component provided with custom close action -->
{{#power-select-mobile 
  renderInPlace=true 
  navMobileComponent="nav-mobile" 
  options=numbers 
  mustFallback="mobile"
  selected=number 
  className="t-single-custom-done"
  mobileTagName="div"
  onchange=(action (mut number)) as |num|}}
  {{num}}
{{/power-select-mobile}}
