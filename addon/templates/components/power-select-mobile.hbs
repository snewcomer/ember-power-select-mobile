{{#if mobileFallback}}
  <!-- wrapper class to encapsulate nav, trigger, and dropdown components -->
  <div class="wrapper">
    <!-- nav -->
    {{#if componentOpen}}
      <!-- default provided -->
      <div class="ps-mobile-nav-wrapper">
        <header class="ps-mobile-header">
          <div class="ps__head" data-test-id="custom-nav">
            <h1 class="ps__head__title t-mobile-filter-title" data-test-id="custom-nav--title">{{labelText}}</h1>
            <button class="ps__head__btn mobile-btn ps__head--action" {{action "done"}} data-test-id="custom-nav--done">{{buttonText}}</button>
          </div>
        </header>
      </div>
    {{/if}}
    <!-- trigger and dropdown -->
    {{#component powerSelectComponentName
      ariaDescribedBy=ariaDescribedBy
      ariaInvalid=ariaInvalid
      ariaLabel=ariaLabel
      ariaLabelledBy=ariaLabelledBy
      options=options
      selected=selected
      onchange=onchange
      onkeydown=onkeydown
      onfocus=onfocus
      onopen=(action "mobileOpen")
      onclose=onclose
      search=search
      disabled=disabled
      placeholder=placeholder
      searchEnabled=searchEnabled
      searchPlaceholder=searchPlaceholder
      searchField=searchField
      matcher=matcher
      loadingMessage=loadingMessage
      noMatchesMessage=noMatchesMessage
      searchMessage=searchMessage
      triggerComponent=triggerComponent
      selectedItemComponent=selectedItemComponent
      afterOptionsComponent=afterOptionsComponent
      beforeOptionsComponent=(component "mobile-trigger" mobileOnFocus=(action "mobileOnFocus"))
      optionsComponent=optionsComponent
      renderInPlace=true
      closeOnSelect=(if multiple false)
      allowClear=allowClear
      verticalPosition=verticalPosition
      horizontalPosition=horizontalPosition
      class=(concat className " ps-mobile-dropdown-wrapper")
      tagName=mobileTagName
      triggerClass=(concat triggerClass "power-select-mobile__trigger")
      dropdownClass=(concat dropdownClass "power-select-mobile__dropdown")
      extra=extra
      initiallyOpened=initiallyOpened
      matchTriggerWidth=matchTriggerWidth
      destination=destination
      tabindex=tabindex
      dir=dir
      as |option term|
    }}
      {{yield option term}}
    {{/component}}
  </div>
{{else}}
  <!-- else render normal ember-power-select component -->
  {{#component powerSelectComponentName
    ariaDescribedBy=ariaDescribedBy
    ariaInvalid=ariaInvalid
    ariaLabel=ariaLabel
    ariaLabelledBy=ariaLabelledBy
    options=optionsArray
    selected=selected
    onchange=onchange
    onkeydown=onkeydown
    onfocus=onfocus
    onopen=onopen
    onclose=onclose
    search=search
    disabled=disabled
    placeholder=placeholder
    searchEnabled=searchEnabled
    searchPlaceholder=searchPlaceholder
    searchField=searchField
    matcher=matcher
    loadingMessage=loadingMessage
    noMatchesMessage=noMatchesMessage
    searchMessage=searchMessage
    triggerComponent=triggerComponent
    selectedItemComponent=selectedItemComponent
    afterOptionsComponent=afterOptionsComponent
    beforeOptionsComponent=beforeOptionsComponent
    optionsComponent=optionsComponent
    renderInPlace=true
    closeOnSelect=closeOnSelect
    allowClear=allowClear
    verticalPosition=verticalPosition
    horizontalPosition=horizontalPosition
    class=class
    triggerClass=triggerClass
    dropdownClass=dropdownClass
    extra=extra
    initiallyOpened=initiallyOpened
    matchTriggerWidth=matchTriggerWidth
    destination=destination
    tabindex=tabindex
    dir=dir
    as |option term|
  }}
    {{yield option term}}
  {{/component}}
{{/if}}
